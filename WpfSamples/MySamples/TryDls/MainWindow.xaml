        </ResourceDictionary>
    </Window.Resources>
    <Grid Style ="{DynamicResource GridStyle}">
        <ToggleButton AutomationProperties.AutomationId="TestButton" Height="50" Width="150" dls:ButtonBehavior.ButtonType="Primary" Click="ButtonBase_OnClick" BorderBrush="Crimson">Click me</ToggleButton>
        <pt:FormattedDoubleSpinner AutomationProperties.AutomationId="AgeField" BorderBrush="Crimson" Margin="256,68,221,258" Height="Auto" DecimalPlaces="0" SmallChange="1" BorderThickness="4" />
    </Grid>
